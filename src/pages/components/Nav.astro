---
import IconMoon from "@assets/images/icon-moon.svg";
import IconSun from "@assets/images/icon-sun.svg";
import IconLayers from "@assets/images/icon-layers.svg";
import IconLayer from "@assets/images/icon-layer.svg";
import { getLocaleFromUrl, getLocalePath, useTranslations } from "@i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const t = useTranslations(locale);
const switchLocale = locale === "en" ? "fa" : "en";
const switchHref = getLocalePath(Astro.url.pathname, switchLocale);
---

<nav class="navbar">
  <ul class="navbar-list">
    <li class="navbar-item">
      <a class="navbar-link" href={getLocalePath("/", locale)}>
        {t("nav.about")}
      </a>
    </li>

    <li class="navbar-item">
      <a class="navbar-link" href={getLocalePath("/resume/", locale)}>
        {t("nav.resume")}
      </a>
    </li>

    <li class="navbar-item">
      <a class="navbar-link" href={getLocalePath("/portfolio/", locale)}>
        {t("nav.portfolio")}
      </a>
    </li>

    <li>
      <button id="toggleTheme">
        <div id="iconSun" class="theme-icon"><IconSun /></div>
        <div id="iconMoon" class="theme-icon"><IconMoon /></div>
      </button>
    </li>
    <li>
      <button id="toggleAurora">
        <div id="iconLayers" class="theme-icon"><IconLayers /></div>
        <div id="iconLayer" class="theme-icon"><IconLayer /></div>
      </button>
    </li>
    <li>
      <a
        id="toggleLanguage"
        class="navbar-link lang-link"
        href={switchHref}
        data-locale={switchLocale}
      >
        {switchLocale === "fa" ? t("nav.lang.fa") : t("nav.lang.en")}
      </a>
    </li>
  </ul>
</nav>

<style lang="scss">
  .navbar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: var(--color-bg-nav);
    backdrop-filter: blur(10px);
    border-radius: 12px 12px 0 0;
    z-index: 5;
  }

  .navbar-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    padding: 0 10px;
    list-style: none;
    height: 54px;
    gap: 20px;
  }

  .navbar-link {
    color: var(--color-black-200);
    transition: color 0.5s ease;

    &.active {
      color: var(--color-text);
      border-bottom: 2px solid var(--color-base-400);
    }
  }

  #toggleAurora,
  #toggleTheme {
    width: 24px;
    height: 24px;
  }

  .theme-icon {
    display: none;
  }

  .theme-icon.active {
    display: block;
  }

  .lang-link {
    font-size: 16px;
    font-weight: 700;
    letter-spacing: 0.6px;
    color: var(--color-text);
  }

  @media (min-width: 1024px) {
    .navbar {
      position: absolute;
      bottom: auto;
      top: 0;
      left: auto;
      right: 0;
      width: max-content;
      border-radius: 0 12px;
      padding: 0 20px;
      background: var(--color-base-200);
    }

    html[dir="rtl"] {
      .navbar {
        top: 0;
        left: 0;
        right: auto;
        border-radius: 12px 0;
      }
    }
  }
</style>

<script src="@assets/scripts/theme.js"></script>
<script src="@assets/scripts/aurora.js"></script>
